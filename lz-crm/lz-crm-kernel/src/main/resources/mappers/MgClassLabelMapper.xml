<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lizhen.crm.kernel.dao.MgClassLabelMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.lizhen.crm.api.entity2.MgClassLabel" id="mgClassLabelMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="getLabelList" resultMap="mgClassLabelMap" >
        SELECT *
        FROM
        mg_class_label where status=1 and type = #{type}
    </select>

</mapper>